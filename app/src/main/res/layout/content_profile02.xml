<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.hssports.gate.ProfileActivity02"
    tools:showIn="@layout/activity_profile02">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageView5"
        android:layout_toRightOf="@+id/imageView5"
        android:text="Special Needs"
        android:textColor="#B200DA"
        android:textIsSelectable="false"
        android:textSize="20dp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/mainBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:onClick="onCheckboxClicked"
        android:text="I have a special need"
        android:textSize="15dp"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/textView8"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8" />

    <Button
        android:id="@+id/button"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="#7CD1F8"
        android:text="Next"
        android:textColor="#FFFF" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mainBox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_accessible_black_24dp" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:progress="50"
        android:layout_marginBottom="19dp"
        android:layout_above="@+id/button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/mainBox"
        android:layout_alignStart="@+id/mainBox"
        android:id="@+id/RL"
        android:visibility="gone"
       >


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView6"
            android:src="@drawable/blueprint_see"
            android:layout_alignTop="@+id/checkBox2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:button="@null"
            android:checked="false"
            android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
            android:singleLine="false"
            android:text="Visual impairment"
            android:textSize="15dp"
            android:layout_below="@+id/checkBox"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:button="@null"
            android:checked="false"
            android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
            android:singleLine="false"
            android:text="Hearing impairment"
            android:textSize="15dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:button="@null"
            android:checked="false"
            android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
            android:singleLine="false"
            android:text="Physical impairment"
            android:textSize="15dp"
            android:layout_below="@+id/checkBox2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="21dp" />

        <CheckBox
            android:id="@+id/checkBox7"
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:button="@null"
            android:checked="false"
            android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
            android:singleLine="false"
            android:text="Speech Impairments"
            android:textSize="15dp"
            android:layout_below="@+id/checkBox3"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="17dp" />

        <CheckBox
            android:id="@+id/checkBox8"
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:button="@null"
            android:checked="false"
            android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
            android:singleLine="false"
            android:text="Cognitive impairments"
            android:textSize="15dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/checkBox7"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <CheckBox
            android:id="@+id/checkBox9"
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:button="@null"
            android:checked="false"
            android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
            android:singleLine="false"
            android:text="Autism"
            android:textSize="15dp"
            android:layout_below="@+id/checkBox8"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView8"
            android:src="@drawable/hear"
            android:layout_above="@+id/checkBox2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView10"
            android:src="@drawable/wheelchair"
            android:layout_alignTop="@+id/checkBox3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/checkBox3"
            android:layout_toLeftOf="@+id/checkBox3"
            android:layout_toStartOf="@+id/checkBox3"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView11"
            android:src="@drawable/chat"
            android:layout_above="@+id/checkBox8"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/checkBox7"
            android:layout_toStartOf="@+id/checkBox7" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView12"
            android:src="@drawable/feather_know"
            android:layout_alignBottom="@+id/checkBox8"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/checkBox8"
            android:layout_toStartOf="@+id/checkBox8"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView13"
            android:src="@drawable/puzzle"
            android:layout_alignBottom="@+id/checkBox9"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/checkBox9"
            android:layout_toStartOf="@+id/checkBox9" />


    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView18"
        android:src="@drawable/ic_favorite_black_24dp"
        android:tint="@color/colorAccent"
        android:layout_marginRight="50dp"
        android:layout_marginEnd="50dp"
        android:layout_alignBottom="@+id/progressBar2"
        android:layout_alignRight="@+id/textView8"
        android:layout_alignEnd="@+id/textView8" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView19"
        android:src="@drawable/ic_accessible_black_24dp"
        android:tint="@color/colorAccent"
        android:layout_alignBottom="@+id/progressBar2"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView20"
        android:src="@drawable/ic_school_black_24dp"
        android:tint="#AAAAAA"
        android:layout_alignBottom="@+id/progressBar2"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView21"
        android:src="@drawable/ic_translate_black_24dp"
        android:tint="#AAAAAA"
        android:layout_alignBottom="@+id/imageView20"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/imageView20" />


</RelativeLayout>
